#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    printf("Enter a string: ");
    gets(str);

    // Convert each lowercase character to uppercase
    while (str[i] != '\0') {
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 32;  // ASCII difference between 'a' and 'A'
        }
        i++;
    }

    printf("Uppercase string = %s\n", str);
    return 0;
}
