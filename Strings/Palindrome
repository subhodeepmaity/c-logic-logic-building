#include <stdio.h>

int main() {
    char str[100];
    int i = 0, len = 0, flag = 0;

    printf("Enter a string: ");
    gets(str);

    // Find length first
    while (str[len] != '\0') {
        len++;
    }

    // Check if start and end characters match
    for (i = 0; i < len / 2; i++) {
        if (str[i] != str[len - 1 - i]) {
            flag = 1;  // Not a palindrome
            break;
        }
    }

    if (flag == 0)
        printf("The string is a palindrome.\n");
    else
        printf("The string is not a palindrome.\n");

    return 0;
}
